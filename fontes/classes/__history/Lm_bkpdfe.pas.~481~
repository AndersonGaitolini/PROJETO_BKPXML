    procedure fFiltraOrdena(pFieldNameOrder: TFieldFiltros = ffCHAVE; pUpDown: TOrdenaBy = obyNone;pFieldName: string = ''; pDtINI: TDate = 0; pDtFin: TDate = 0 ; pValue1: string = '';pValue2: string = '');
  end;

  var
   tabBackupXML : TLm_bkpdfe;
   daoBackupXML : TDaoBkpdfe;
   FieldFiltros : TFieldFiltros;
   Ordenaby     : TOrdenaBy;

implementation

uses
  uMetodosUteis;

{ TDaoBkpdfe }

function TDaoBkpdfe.fCarregaXMLEnvio(ptabXML : TLm_bkpdfe): Boolean;
var wDataSet : TDataSet;
    wChaveAux : string;
wControle : Integer;
begin
  wDataSet := TDataSet.Create(Application);
  try
    try
      with DM_NFEDFE do
      begin
        wDataSet := dao.ConsultaTab(ptabXML, ['Chave']);
        if (wDataSet.RecordCount = 1) and
           (wDataSet.FieldByName('Chave').AsString = ptabXML.Chave) then
        begin
          ptabXML.Id := wDataSet.FieldByName('id').AsInteger;
          wControle := Dao.Salvar(ptabXML); //,['id','Chave','Idf_documento','dataemissao','Tipoambiente','Xmlenvio','Xmlenv'],);
          AddLog('CRUD_ORM','J:\','Update id:'+IntToStr(ptabXML.Id));
        end
        else
        begin
          wChaveAux := ptabXML.Chave;
          wDataSet := dao.ConsultaTab(ptabXML, ['idf_Documento']);
          if (wDataSet.RecordCount = 1) and
             (wDataSet.FieldByName('idf_documento').AsInteger = ptabXML.Idf_documento) then
          begin
            if (wDataSet.FieldByName('Chave').AsString < wChaveAux) then
            begin
              ptabXML.Chave := wChaveAux;
              wControle := Dao.Salvar(ptabXML);
               AddLog('CRUD_ORM','J:\','Update id:'+IntToStr(ptabXML.Id)+'idf_doc dup >.');
              exit;
            end
            else
            begin
              wControle := Dao.Salvar(ptabXML);
              AddLog('CRUD_ORM','J:\','Update id:'+IntToStr(ptabXML.Id)+'idf_doc dup. <');
              exit;
            end;
          end;

           ptabXML.Id := fNextId(ptabXML);
           wControle:= Dao.Inserir(ptabXML);
           AddLog('CRUD_ORM','J:\','Inseriu id:'+IntToStr(ptabXML.Id));
        end;

        if Assigned(ptabXML.Xmlenvio) then
          ptabXML.Xmlenvio.Free;

        if Assigned(ptabXML.Xmlextend) then
           ptabXML.Xmlextend.Free;

        if Assigned(ptabXML.Xmlextend) then
           ptabXML.Xmlenviocanc.Free;

        if Assigned(ptabXML.Xmlextend) then
           ptabXML.Xmlextendcanc.Free;

        Result := (wControle > 0);
      end;
    except on E: Exception do
           begin
             ShowMessage(e.Message);
           end;
    end;
  finally
   FreeAndNil(wDataSet);
  end;
end;

function TDaoBkpdfe.fCarregaXMLRetorno(ptabXML: TLm_bkpdfe): Boolean;
var wDataSet : TDataSet;
begin
  wDataSet := TDataSet.Create(Application);
  try
    try
      with DM_NFEDFE do
      begin
//      if fConsultaTabXML(ptabXML,['chave']) then
        wDataSet := Dao.ConsultaTab(ptabXML,['chave']);

        if (wDataSet.RecordCount = 1) and
           (wDataSet.FieldByName('chave').AsString = ptabXML.Chave) then
        begin
          ptabXML.Id := wDataSet.FieldByName('id').AsInteger;
          Result := Dao.Salvar(ptabXML,['id','chave','Dataemissao','Datarecto','Tipoambiente','Xmlenvio']) > 0
        end
        else
          Result := Dao.Inserir(ptabXML,['id'],fcIgnore) > 0;
      end;


    except on E: Exception do
    end;
  finally
   FreeAndNil(wDataSet);
  end;

end;

function TDaoBkpdfe.fConsultaTabXML(var ptabXML: TLm_bkpdfe; pCampos: array of string): Boolean;
var wDFQ : TFDQuery;
    streamAUX: TFilestream;
    i: Integer;
begin
  REsult := False;
  wDFQ := TFDQuery.Create(Application);
    try
      with DM_NFEDFE do
      begin
        wDFQ := dao.ConsultaTabela(ptabXML, pCampos);

        with wDFQ do
        if RecordCount >= 1 then
        begin
          ptabXML.Id := FieldByName('id').AsInteger;
          ptabXML.Chave := FieldByName('chave').AsString;
          ptabXML.Idf_documento := FieldByName('Idf_documento').AsInteger;

          ptabXML.Dataemissao := FieldByName('Dataemissao').AsDateTime;
          ptabXML.Datarecto := FieldByName('Datarecto').AsDateTime;
          ptabXML.Motivo := FieldByName('Motivo').AsString;
          ptabXML.Protocolocanc := FieldByName('Protocolocanc').AsString;
          ptabXML.Protocolorecto := FieldByName('Protocolorecto').AsString;
          ptabXML.Dataalteracao := FieldByName('Dataalteracao').AsDateTime;
          ptabXML.Tipo := FieldByName('Tipo').AsString;
          ptabXML.Emailsnotificados := FieldByName('Emailsnotificados').AsString;
          ptabXML.Tipoambiente := FieldByName('Tipoambiente').AsString;
          ptabXML.Motivocanc := FieldByName('Motivocanc').AsString;
          ptabXML.Protocoloaut := FieldByName('Protocoloaut').AsString;

          streamAUX := TFIleStream(wDFQ.CreateBlobStream(wDFQ.FieldByName('Xmlenvio'),bmWrite));
          if  not Assigned(streamAUX) then
            streamAUX := nil
          else
            ptabXML.Xmlenvio := streamAUX;

          streamAUX := TFIleStream(wDFQ.CreateBlobStream(wDFQ.FieldByName('Xmlextend'),bmWrite));
          if  not Assigned(streamAUX) then
            streamAUX := nil
          else
          ptabXML.Xmlextend := streamAUX;

          streamAUX := TFIleStream(wDFQ.CreateBlobStream(wDFQ.FieldByName('Xmlenviocanc'),bmWrite));
          if  not Assigned(streamAUX) then
            streamAUX := nil
          else
          ptabXML.Xmlenviocanc := streamAUX;

          streamAUX := TFIleStream(wDFQ.CreateBlobStream(wDFQ.FieldByName('Xmlextendcanc'),bmWrite));
          if  not Assigned(streamAUX) then
            streamAUX := nil
          else
          ptabXML.Xmlextendcanc := streamAUX;

          Result := true;
        end;

      end;
    except on E: Exception do
    end;
end;

function TDaoBkpdfe.fFindChaveXML(var ptabXML: TLm_bkpdfe): Boolean;
var wDataSet : TDataSet;
begin
  wDataSet := TDataSet.Create(Application);
  try
  with DM_NFEDFE do
  begin
    if ptabXML.Chave = '' then
    begin
      Result := False;
      Exit;
    end;

    wDataSet := Dao.ConsultaTab(ptabXML,['Chave']);

    if wDataSet.RecordCount > 0 then
    begin
      if wDataSet.FieldByName('Chave').AsString = ptabXML.Chave then
        Result := True;
    end;

  end;

  finally
    FreeAndNil(wDataSet);
  end;

end;

function TDaoBkpdfe.fNextId(pTabXML: TLm_bkpdfe): integer;
var wDataSet: TDataset;
begin
  if not Assigned(pTabXML) then
    pTabXML := TLm_bkpdfe.Create;

  Result := 0;
  ptabXML.Id := Result;
  wDataSet := TDataSet.Create(Application);
  try
    try
      wDataSet := DM_NFEDFE.dao.ConsultaAll(ptabXML,'id' );
      wDataSet.Close;
      wDataSet.Open;
      wDataSet.last;
      Result := wDataSet.FieldByName('id').AsInteger+1;
    except on E: Exception do
             ShowMessage('Erro no método fNextId '+#10#13+e.Message);
    end;
  finally
    FreeAndNil(wDataSet);
  end;
end;

procedure TDaoBkpdfe.fFiltraOrdena(pFieldNameOrder: TFieldFiltros = ffCHAVE; pUpDown: TOrdenaBy = obyNone ;pFieldName: string = ''; pDtINI: TDate = 0; pDtFin: TDate = 0 ; pValue1: string = '';pValue2: string = '');
var data1STR, data2STR, str1, str2:string;
    wDataSet : TDataSet;
    wUpDown: string;
    wV1Empty, wV2Empty : boolean;
const cAsc = 'Asc'; cdesc = 'desc';


  procedure FiltroData(pFieldOrder:string);
  begin
    try
      with DM_NFEDFE, sqlBkpDfe do
      begin
        DateTimeToString(data1STR, 'yyyy/mm/dd', pDtINI);
        data1STR := QuotedStr(data1STR);
        DateTimeToString(data2STR, 'yyyy/mm/dd', pDtFin);
        data2STR := QuotedStr(data2STR);
        SQL.Clear;
        SQL.Add('Select * from lm_bkpdfe ');
        SQL.Add( 'where ');
        str1 := Format('(%s between %s and %s) ',[pFieldName,data1STR, data2STR]);
        SQL.Add(str1);

        if pUpDown = obyNone then
        begin
          str1 := Format(' order by %s %s',[pFieldOrder, wUpDown]);
          SQL.Add(str1);
        end;

//        if mostraSQL then
//          ShowMessage(SQL.Text);

        sqlBkpDfe.Open;
        wDataSet := sqlBkpDfe;
        dsBkpdfe.DataSet := wDataSet;
        cdsBkpdfe.Close;
        cdsBkpdfe.Open;
        Application.ProcessMessages;
      end;
    except on E: Exception do

    end;
  end;

  procedure Filtro(pFieldOrder:string);
  var wOrdData: Boolean;
      auxFF : TFieldFiltros;
  begin
      auxFF := TConvert<TFieldFiltros>.StrConvertEnum('ff'+pFieldOrder);
      wOrdData := ((auxFF = ffDATARECTO) or (auxFF = ffDATAALTERACAO));
    try
      with DM_NFEDFE, sqlBkpDfe do
      begin
//        if not wOrdData then
//        begin
          DateTimeToString(data1STR, 'yyyy/mm/dd', pDtINI);
          data1STR := QuotedStr(data1STR);
          DateTimeToString(data2STR, 'yyyy/mm/dd', pDtFin);
          data2STR := QuotedStr(data2STR);
//        end;

        SQL.Clear;
        SQL.Add('Select * from lm_bkpdfe ');

//        if wOrdData and (not wV1Empty or not wV2Empty) then
//          SQL.Add( 'where ')
//        else
//        begin
          SQL.Add( 'where ');
          str1 := Format('(dataemissao between %s and %s) ',[data1STR, data2STR]);
          SQL.Add(str1);
//        end;
//
//        if not wV1Empty and not wV2Empty then
//        begin
//          if pValue1 = pValue2 then
//            str1 := Format('and (%s = %s) ',[pValue1, pValue2])
//          else
//            str1 := Format('and (%s between %s and %s) ',[pFieldOrder, pValue1, pValue2]);
//
//          SQL.Add(str1);
//        end
//        else
//        if wV1Empty and wV2Empty then
//        begin
//          if pValue1 = pValue2 then
//            str1 := Format('%s = %s',[pValue1, pValue2])
//          else
//            str1 := Format('%s between %s and %s ',[pFieldOrder, pValue1, pValue2]);
//
//          SQL.Add(str1);
//        end
//        else
//        if not wV1Empty then
//        begin
//          str1 := Format('(%s = %s)',[pFieldOrder, pValue1]);
//          SQL.Add(str1);
//        end
//        else
//        if not wV2Empty then
//        begin
//          str1 := Format('(%s = %s)',[pFieldOrder, pValue2]);
//          SQL.Add(str1);
//        end;

        if pUpDown <> obyNone then
        begin
          str1 := Format(' order by %s %s',[pFieldOrder, wUpDown]);
          SQL.Add(str1);
        end;

//        if mostraSQL then
//          ShowMessage(SQL.Text);

        sqlBkpDfe.Open;
        wDataSet := sqlBkpDfe;
        dsBkpdfe.DataSet := wDataSet;
        cdsBkpdfe.Close;
        cdsBkpdfe.Open;
        Application.ProcessMessages;
      end;
    except on E: Exception do

    end;
  end;


begin
    wV1Empty := pValue1 = '';
    wV2Empty := pValue2 = '';

    case pUpDown of
      obyASCENDENTE: wUpDown := cAsc;
      obyDESCEDENTE: wUpDown := cdesc;
    end;

    case pFieldNameOrder of
      ffID: begin end;
      ffCHAVE: begin Filtro('CHAVE') end;
      ffIDF_DOCUMENTO: begin Filtro('IDF_DOCUMENTO') end;
      ffDATAEMISSAO: begin FiltroData('DATAEMISSAO') end;
      ffDATARECTO: begin Filtro('DATARECTO') end;
      ffMOTIVO: begin Filtro('MOTIVO') end;
      ffPROTOCOLOCANC: begin Filtro('PROTOCOLOCANC') end;
      ffPROTOCOLORECTO: begin Filtro('') end;
      ffDATAALTERACAO: begin Filtro('DATAALTERACAO') end;
      ffTIPO: begin Filtro('TIPO') end;
      ffEMAILSNOTIFICADOS: begin Filtro('EMAILSNOTIFICADOS') end;
      ffTIPOAMBIENTE: begin Filtro('TIPOAMBIENTE') end;
      ffXMLENVIO: begin Filtro('ID') end;
      ffXMLEXTEND: begin Filtro('ID') end;
      ffMOTIVOCANC: begin Filtro('MOTIVOCANC') end;
      ffXMLENVIOCANC: begin Filtro('ID') end;
      ffXMLEXTENDCANC: begin Filtro('ID') end;
      ffPROTOCOLOAUT: begin Filtro('PROTOCOLOAUT') end;

    end;

end;

function TDaoBkpdfe.fTotalArquivos(pTabela: TLm_bkpdfe): Integer;
begin
  if not Assigned(pTabela) then
    Exit;

  Result := 0;
  try
    try
       with DM_NFEDFE do
       begin
         Result := Dao.GetRecordCount(pTabela, ['id']);
       end;
    except on E: Exception do
    end;
  finally
  end;
end;

end.
